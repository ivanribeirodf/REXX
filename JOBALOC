/*REXX*/
 SAY '----------------------'
 SAY '- PROGRAMA ALLOC     -'
 SAY 'TECLE ENTER'
IF SYSDSN('SYS2.IVAN.CLIENTES') = 'OK' THEN
  SAY 'MEMBRO JA EXISTE!'
ELSE
  DO
    "ALLOC FILE(CLIENTES) DA('SYS2.IVAN.CLIENTES') NEW SPACE(1 1)",
    "RECFM(F B) LRECL(80) BLKSIZE(27920) DSORG(PS)"
     SAY RC
     "FREE FILE(CLIENTES)"
      SAY 'ARQUIVO CRIADO COM SUCESSO!'
  END
