/*REXX*/
NOME = ''
SOBRENOME = ''
SALARIO = 0
/*                     */
SAY 'DIGITE O NOME E SOBRENOME: '
  PULL NOME SOBRENOME
  SAY 'TECLE ENTER!!'
SAY 'DIGITE O SEU SALARIO E VEJA A MAGICA'
  PULL SALARIO
/*                     */
SAY 'NOME DIGITADO: ' NOME SOBRENOME
  IF DATATYPE(SALARIO) = 'NUM' THEN
    SAY 'SALARIO DOBRADO: ' SALARIO * 2
