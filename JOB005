/*REXX*/
 SAY '----------------------'
 SAY '- PROGRAMA DE MEDIA  -'
 SAY 'TECLE ENTER'
ESTADO = ""
/**/
SAY 'DIGITE UM ESTADO'; PULL ESTADO
SELECT
  WHEN ESTADO = 'SP' THEN
     SAY 'CAPITAL - SAO PAULO'
  WHEN ESTADO = 'MG' THEN
     SAY 'CAPITAL - BELO HORIZONE'
  WHEN ESTADO = 'BA' THEN
     SAY 'CAPITAL - SALVADOR'
  OTHERWISE
     SAY 'ESTADO NAO PERMITIDO'
END
